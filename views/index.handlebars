<div class="jumbotron">
  <div class="container">
    <h1 class="display-4">Eat Da-Burger</h1>
    
    <form action="/burgers/create" method="POST">
      <div class="form-group">
        <input class="form-control" name="burger_name" type="text" placeholder="Burger Name">
        <br>
        <button type="submit" class="btn btn-success">Add Burger</button>
      </div>
    </form>
  </div>
</div>

<div class="container text-center">
  <div class="row">
    <div class="col-md-6">
      <h2>Undevoured Burgers</h2>
      {{#each burgers}}
      {{#unless this.devoured}}

      {{!-- <form action="/burgers/update/{{this.id}}?" method="POST">
        <div class="form-group">
          <button type="submit" class="btn btn-danger" name="devoured" value="1">{{burger_name}} onsubmit</button>
        </div>
      </form> --}}

      <form class="devour-form">
          <input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
          <button type="submit" class="btn btn-danger">{{burger_name}}</button>
      </form>

      {{/unless}}
      {{/each}}
    </div>



    <div class="col-md-6">
      <h2>Devoured Burgers</h2>
      {{#each burgers}}
      {{#if this.devoured}}

      <div>
        <button type="button" class="btn btn-warning">{{burger_name}}</button>
      </div><br>

      {{/if}}
      {{/each}}
    </div>

  </div>
</div>